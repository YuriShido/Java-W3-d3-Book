
public class Drive {

	public static void main(String[] args) {
		Book book1 = new Book("Harry Potter", "J.K.", "Rowling", 1998);
		Book book2 = new Book("An intimate Portrait", "Barack", "Obama", 2018);
		Book book3 = new Book("Becoming", "Michelle", "Obama", 2018);
		
		System.out.println("Title :" + book1.title + "  Author : " + book1.firstnameAuthor + " " + book1.lastnameAuthor + "  Published in : " + book1.year);
		System.out.println("Title :" + book2.title + "  Author : " + book1.firstnameAuthor + " " + book2.lastnameAuthor + "  Published in : " + book2.year);
		System.out.println("Title :" + book3.title + "  Author : " + book3.firstnameAuthor + " " + book3.lastnameAuthor + "  Published in : " + book3.year);
	}

}
